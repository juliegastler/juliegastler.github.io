    <!-- Score Display -->
    <div class="result-container">
      <div class="result">Total Score out of 10: <span id="score">0</span></div>
    </div>

    <!-- Reset Button -->
    <button class="reset-button" id="resetButton">Reset All</button>
  </div>

  <script>
    const totalButtons = 19; // 15 buttons from 3 sets of 5 + 4 buttons from the last set

    // Function to calculate the total score for all button sets
    function calculateScore() {
      let buttonsOn = 0;

      for (let i = 1; i <= 3; i++) { // Iterate over the first 3 sets (5 buttons each)
        for (let j = 1; j <= 5; j++) {
          const button = document.getElementById(`button${j}-${i}`);
          if (button.classList.contains('half-checked')) {
            buttonsOn += 0.5;
          } else if (button.classList.contains('full-checked')) {
            buttonsOn += 1;
          }
        }
      }

      for (let k = 1; k <= 4; k++) { // Iterate over the last set (4 buttons)
        const button = document.getElementById(`button${k}-4`);
        if (button.classList.contains('half-checked')) {
          buttonsOn += 0.5;
        } else if (button.classList.contains('full-checked')) {
          buttonsOn += 1;
        }
      }

      const score = (buttonsOn / totalButtons) * 10; // Total score out of 10
      document.getElementById('score').textContent = `${score.toFixed(2)}`;
    }

    // Function to toggle between states for buttons
    function toggleThreeState(button) {
      if (button.classList.contains('half-checked')) {
        button.classList.remove('half-checked');
        button.classList.add('full-checked');
      } else if (button.classList.contains('full-checked')) {
        button.classList.remove('full-checked');
      } else {
        button.classList.add('half-checked');
      }
      calculateScore();
    }

    // Attach event listeners to all buttons
    for (let i = 1; i <= 3; i++) { // For the first 3 sets (5 buttons each)
      for (let j = 1; j <= 5; j++) {
        const button = document.getElementById(`button${j}-${i}`);
        button.addEventListener('click', function () {
          toggleThreeState(button);
        });
      }
    }

    for (let k = 1; k <= 4; k++) { // For the last set (4 buttons)
      const button = document.getElementById(`button${k}-4`);
      button.addEventListener('click', function () {
        toggleThreeState(button);
      });
    }

    // Function to reset all buttons
    function resetAllButtons() {
      for (let i = 1; i <= 3; i++) { // Reset the first 3 sets (5 buttons each)
        for (let j = 1; j <= 5; j++) {
          const button = document.getElementById(`button${j}-${i}`);
          button.classList.remove('half-checked', 'full-checked');
        }
      }

      for (let k = 1; k <= 4; k++) { // Reset the last set (4 buttons)
        const button = document.getElementById(`button${k}-4`);
        button.classList.remove('half-checked', 'full-checked');
      }
      calculateScore(); // Reset the score to 0 after resetting all buttons
    }

    // Attach event listener to Reset All button
    document.getElementById('resetButton').addEventListener('click', resetAllButtons);
  </script>

